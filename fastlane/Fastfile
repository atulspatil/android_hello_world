platform :android do

    desc "Build aplication"
    lane :build do
       begin 
          gradle(task: "clean assembleDebug")
       rescue => exception
           on_error(exception)
       end
    end

    desc "Perform Unit tests"
    lane :tests do
      gradle(task: "test")
    end

    desc "Perform Instrumented tests"
    lane :ui_tests do
      gradle(
        task: 'clean'
      )
      gradle(
        task: 'assemble',
        build_type: 'Debug'
      )
      gradle(
        task: 'assemble',
        build_type: 'AndroidTest'
      )
      screengrab
    end

   def on_error(exception)
      slack(
          message: "Some thing goes wrong",
          success: false,
          slack_url: "https://hooks.slack.com/services/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",
          attachment_properties: {
              fields: [
                  {
                      title: "Error message",
                      value: exception.to_s,
                      short: false
                  }
              ]
          }
      )
   end

end


